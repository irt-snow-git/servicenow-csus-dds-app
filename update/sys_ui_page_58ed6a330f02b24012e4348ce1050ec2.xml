								<div class="form-group col-lg-2 col-md-3 col-sm-3 col-xs-12">
									<label for="supDate">Date delivered</label>
									<input type="date" ng-model="sup.delivered" class="form-control" id="supDate"/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
